{
  "name": "contracts",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy-local.js --network localhost",
    "deploy:seed": "hardhat run scripts/seed.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-testnet.js --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "deploy:simple": "RPC_URL=\"$RPC_URL\" PRIVATE_KEY=\"$PRIVATE_KEY\" node scripts/deploy-simple.js",
    "deploy:simple:dry": "DRY_RUN=1 RPC_URL=\"$RPC_URL\" PRIVATE_KEY=\"$PRIVATE_KEY\" node scripts/deploy-simple.js",
    "faucet:info": "node scripts/faucet-info.js",
    "deploy:ledger": "RPC_URL=\"$RPC_URL\" node scripts/deploy-ledger.js",
    "deploy:ledger:dry": "DRY_RUN=1 RPC_URL=\"$RPC_URL\" node scripts/deploy-ledger.js"
  },
  "dependencies": {
  },
  "devDependencies": {
    "solhint": "^3.6.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "dotenv": "^17.2.3",
    "hardhat": "^2.22.12",
    "solidity-coverage": "^0.8.16",
    "@ledgerhq/hw-app-eth": "^6.35.8",
    "@ledgerhq/hw-transport-node-hid": "^6.29.6"
  }
